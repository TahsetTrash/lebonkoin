{% extends 'base.html.twig' %}

{% block body %}
    <h1 class="text-center">Modifier votre pub ici</h1>
    <div class="card mx-center" style="width: 50rem; margin: auto; margin-top: 100px">
        <div class="card-body">

            {{ form_start(form) }}
            <div class="row mx-auto">
                <div class="col-md-4">{{ form_row(form.name, {'label': 'Nom de la pub','attr':{'placeholder':'Nom de l\'annonce'}}) }}</div>
                <div class="col-md-4">{{ form_row(form.description, {'label': 'Description','attr':{'placeholder':'Description'}}) }}</div>
                <div class="col-md-4"> {{ form_row(form.price, {'label': 'Prix','attr':{'placeholder':'Prix'}}) }}</div>
                <div class="col-md-4"> {{ form_row(form.category, {'label':'Categorie'}) }}</div>
                <div class="col-md-4"> {{ form_row(form.imagefile), {'label':'Image'}) }}</div>

            </div>
            <div class="text-center">
                <button type="submit" class="btn btn-primary">Cr√©er votre pub</button>
            </div>

        </div>
    </div>

    {{ form_end(form) }}

{% endblock %}