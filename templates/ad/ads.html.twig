{% block body %}
    <div class="row flex mx-auto">
        {% for ad in ads %}
            <div class="col-3">
                <div class="card">
                    {% if ad.filename %}
                        <img src="{{ vich_uploader_asset(ad, 'imagefile') }}" alt="card-img-top"
                             style="width:100%; height: 100% ;">
                    {% endif %}

                    <div class="card-body">
                        <h5 class="card-title">
                            <a>{{ ad.name }} </a>
                        </h5>

                        <h6> {{ ad.category.name }}</h6>

                        <p class="card-text"> {{ ad.description }} </p>
                        <h5 class="card-text"> {{ ad.price }}â‚¬ </h5>
                    </div>
                    {% if app.user and app.user.id == ad.ownerId %}
                        <div class="card-body">
                            <a href={{ path("modify_ad", {id: ad.id}) }}>
                                <button type="submit" class="btn btn-primary">Modifier</button>
                            </a>
                            <a href={{ path("delete_ad", {id: ad.id}) }}>
                                <button type="submit" class="btn btn-danger">Supprimer</button>
                            </a>
                        </div>
                    {% endif %}
                </div>
            </div>
        {% endfor %}
    </div>
{% endblock %}